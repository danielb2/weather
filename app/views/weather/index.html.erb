<%= form_with url: "/lookup", method: :get do |form| %>
  <%= form.label :query, "Enter address for weather lookup:" %>
  <%= form.text_field :query %>
  <%= form.submit "Submit" %>
<% end %>
<% if @address %>
    <h2><%= @address.place_name %></h2>
    <hr style="width: 100%">
  <div>
    <h3>Current Weather </h3>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Temp</th>
          <th>Max Temp</th>
          <th>Min Temp</th>
        </tr>
      </thead>
      <tbody>
        <%= rows_for_weather([@address.current_weather]) %>
      </tbody>
    </table>
  </div>
  <div>
    <h3>Forecast</h3>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Temp</th>
          <th>Max Temp</th>
          <th>Min Temp</th>
        </tr>
      </thead>
      <tbody>
        <%= rows_for_weather(@address.forecast) %>
      </tbody>
    </table>
  </div>
<% end %>
